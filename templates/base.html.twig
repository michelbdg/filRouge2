<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <link rel="icon" href="public/assets/images/burger-solid.svg">
        <title>{% block title %}Papa's Burgeria{% endblock %}</title>
        <!-- Lien font-awesome -->
        <script src="https://kit.fontawesome.com/aaf4e1a044.js" crossorigin="anonymous"></script>
        <!-- feuille de style -->
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
         <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
        <!-- Partie JavaScript -->
        <script src="{{ asset('js/scrip.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </head>
    <body class="">
        <nav class="navbar navbar-expand-lg bg-dark-subtle bg-gradient shadow p-3 mb-5 bg-body-tertiary rounded bg-opacity-25">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('catalogue') }}"><i class="fa-solid fa-burger fa-bounce fa-2xl" style="color:#df0c0c"></i></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Catalogue</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Dropdown
                            </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li><a class="dropdown-item" href="#">Another action</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-brand text-center">
                            <h1 class="">Papa's Burgeria<h1>
                        </li>
                    </ul>
                   <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        {% if app.user %}
                            <li>
                                <div class="fs-6">
                                    <small class="mx-5">Bonjour {{ app.user.firstname }}</small>
                                    <a href="{{ path('compte') }}" class="text-white fs-6"><i class="fas fa-user-check"></i></a>
                                    <span class="text-white"> | </span>
                                    <a href="{{ path('app_logout') }}" class="text-white fs-6"><i class="fas fa-sign-out-alt"></i></a>
                                </div>
                                {% else %}
                                    <a href="{{ path('app_login') }}" class="text-white fs-6"><i class="fas fa-user"></i></a>
                                    <span class="text-white"> | </span>
                                    <a href="{{ path('inscription') }}" class="text-white fs-6">Inscription</i></a>
                        {% endif %}
                        </li>
                        <li>
                            <a href="{{ path('panier') }}" class="text-white fs-4 mx-3">
                                <i class="fas fa-shopping-basket">
                                    <span class="badgeNB position-absolute translate-middle badge rounded-pill bg-info">{{ monPanier.nbArticles() }}</span>
                                </i>
                            </a>
                        </li>
                   </ul>
                </div>
            </div>
        </nav>
    {% block body %}{% endblock %}
        <footer>
            <section class="container-fluid bg-black bg-gradient text-center text-white">
                <div class="row">
                    <div class="col">
                        <p>&copyCopyright Filrouge 2023</p>
                    </div>
                </div>
            </section>
        </footer
    </body>
</html>
